<div class="history-table">
    <h2>Recent Users Transactions</h2>
    <% if (transactions.length> 0) { %>
        <div class="flex flex-col">
            <div class="overflow-x-auto">
                <div class="inline-block min-w-full">
                    <div class="overflow-hidden">
                        <table class="min-w-full text-left text-sm font-light">
                            <thead class="font-medium dark:border-neutral-500 dark:bg-neutral-600">
                                <tr>
                                    <th scope="col" class="px-6 py-4">User</th>
                                    <th scope="col" class="px-6 py-4">Transaction</th>
                                    <th scope="col" class="px-6 py-4">Amount (NGN)</th>
                                    <th scope="col" class="px-6 py-4">Status</th>
                                    <th scope="col" class="px-6 py-4">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach(function(transaction) { %>
                                    <tr class="bg-white dark:border-neutral-500 dark:bg-neutral-600">
                                        <td class="whitespace-nowrap px-6 py-4">
                                            <%= transaction.user.name %>
                                        </td>
                                        <td class="whitespace-nowrap px-6 py-4">
                                            <%= transaction.description %>
                                        </td>
                                        <td class="whitespace-nowrap px-6 py-4">
                                            <%= transaction.amount %>
                                        </td>
                                        <td class="whitespace-nowrap px-6 py-4">
                                            <%= transaction.status %>
                                        </td>
                                        <td class="whitespace-nowrap px-6 py-4">
                                            <%= transaction.updatedAt %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
            <p>No recent transcations</p>
            <% } %>
</div>