<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/pay.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pay Now</title>
</head>
<body>
    <main>
      <img src="/images/gifted_logo.png" alt="">
      <h2>Make Payment To Continue</h2>
      
      <% if (typeof errorMessage !== 'undefined' && errorMessage !== null) { %>
        <div class="error-message">
          <%= errorMessage %>
        </div>
      <% } %>

      <form id="paymentForm" method="POST" action="/confirm-payment">
        <div class="form-group">
          <label for="email">Email Address</label>
          <input type="email" id="email-address" name="email" value="<%= email %>" required />
        </div>
        <div class="form-group">
          <label for="amount">Amount</label>
          <input type="tel" id="amount" name="amount" value="<%= amount_to_pay %>" disabled required />
        </div>
        <div class="form-submit">
          <button type="submit"> Pay Now </button>
        </div>
      </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://js.paystack.co/v1/inline.js"></script>
    <script>
      const amountField = document.querySelector("#amount")
      const paymentForm = document.getElementById("paymentForm");
      const key = "pk_test_e44faf5fa87bcbcc326a7527dc4263d49988a2f2";
      paymentForm.addEventListener("submit", payWithPaystack, false);
      function payWithPaystack(e) {
        e.preventDefault();
        const amount = Number(document.getElementById("amount").value) * 100
        let handler = PaystackPop.setup({
          key: key,
          email: document.getElementById("email-address").value,
          amount,
          onClose: function () {
            // alert("Transaction was not completed, window closed.");
          },
          callback: function (response) {
            const reqBody = {
              reference: response.reference,
              amount: document.getElementById("amount").value * 100,
            };
            axios
              .post("/confirm-payment", reqBody)
              .then((response) => {
                console.log(response);
                location.href = '/dashboard'
              })
              .catch((error) => {
                console.log(error?.response?.data || error);
              });
          },
        });
  
        handler.openIframe();
      }
    </script>
</body>
</html>