<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz | Take One</title>
  
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    h1 {
      color: #333;
    }

    #quizContainer {
      background-color: #fff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 400px;
      text-align: center;
    }

    #options input[type="radio"] {
      margin-right: 5px;
    }

    #submitBtn {
      margin-top: 10px;
      background-color: #4caf50;
      color: #fff;
      border: none;
      padding: 10px 20px;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    #submitBtn:disabled {
      background-color: #d3d3d3;
      cursor: not-allowed;
    }

    #submitBtn:active {
      background-color: #45a049;
    }

    #timer {
      margin-top: 10px;
      font-size: 18px;
      color: #333;
    }

    button[onclick] {
      background-color: transparent;
      border-radius: 10px;
      padding: 10px 35px;
      cursor: pointer;
      border: 1px solid #4caf50;
      color: #4caf50;
      transition: background-color 0.3s, color 0.3s;
    }

    button[onclick]:hover {
      background-color: #4caf50;
      color: #fff;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.getElementById('quizForm');
      const submitButton = document.getElementById('submitBtn');
      const timerElement = document.getElementById('timer');

      let formSubmitted = false;

      const submitForm = function() {
        if (formSubmitted) {
          return;
        }

        formSubmitted = true;
        submitButton.disabled = true;
        submitButton.textContent = 'Please wait...';

        const formData = new FormData(form);

        fetch('/quiz/submit-quiz', {
          method: 'POST',
          body: formData,
        })
        .then(response => response.text())
        .then(result => {
          alert(result);

          // Fetch the next question and update the page
          fetch('/quiz/next-question')
            .then(response => response.json())
            .then(data => {
              if (data.question) {
                document.getElementById('question').textContent = data.question;

                const optionsContainer = document.getElementById('options');
                optionsContainer.innerHTML = '';
                data.options.forEach((option, index) => {
                  const radio = document.createElement('input');
                  radio.type = 'radio';
                  radio.name = 'answer';
                  radio.value = index;
                  optionsContainer.appendChild(radio);

                  const label = document.createElement('label');
                  label.textContent = option;
                  optionsContainer.appendChild(label);

                  optionsContainer.appendChild(document.createElement('br'));
                });

                startTimer();

                submitButton.disabled = false;
                submitButton.textContent = 'Submit';
              } else {
                document.getElementById('quizContainer').innerHTML = '<h1>Quiz is over</h1>';
              }

              formSubmitted = false;
            })
            .catch(error => {
              console.error(error);
              alert('An error occurred while fetching the next question. Please try again.');
            });
        })
        .catch(error => {
          console.error(error);
          alert('An error occurred while submitting your answer. Please try again.');
        });
      };

      // Timer countdown logic
      let countdown = 30;
      let timerInterval;

      const updateTimer = function() {
        timerElement.textContent = `Time remaining: ${countdown} seconds`;

        if (countdown > 0) {
          countdown--;
        } else {
          submitForm();
        }
      };

      const startTimer = function() {
        clearInterval(timerInterval);
        countdown = 30;
        updateTimer();
        timerInterval = setInterval(updateTimer, 1000);
      };

      startTimer();

      form.addEventListener('submit', function (event) {
        event.preventDefault();
        submitForm();
      });

      submitButton.addEventListener('click', submitForm);
    });
  </script>
</head>
<body>
  <div id="quizContainer">
    <% if (question) { %>
      <h1>Quiz</h1>
      <p id="question"><%= question.question %></p>
      <form id="quizForm">
        <div id="options">
          <% question.options.forEach((option, index) => { %>
            <input type="radio" name="answer" value="<%= index %>">
            <label><%= option %>  <%= index %></label><br>
          <% }); %>
        </div>
        <button type="submit" id="submitBtn">Submit</button>
      </form>
      <div id="timer"></div>
    <% } else { %>
      <h1>No Available Quiz At The Moment!</h1>
      <button onclick="window.location.href='/quiz'">Go back</button>
    <% } %>
  </div>
</body>
</html>
